<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hk.suitup" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".Activity.SubActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".Fragment.ShareFragment"
            android:label="@string/title_activity_share_fragment" >
        </activity>
        <activity
            android:name=".Fragment.FragmentAdapter"
            android:label="@string/title_activity_fragment_adapter" >
        </activity>
        <activity
            android:name=".Activity.ProductDetailActivity"
            android:label="@string/title_activity_product_detail" >
        </activity>
        <activity
            android:name=".Activity.ChangeInfoActivity"
            android:label="@string/title_activity_change_info" >
        </activity>
        <activity
            android:name=".Activity.ShowShoppingCartActivity"
            android:label="@string/title_activity_show_shopping_cart" >
        </activity>
        <activity
            android:name=".Activity.RegisterActivity"
            android:label="RegisterActivity" >
        </activity>
        <activity
            android:name=".Fragment.ShoppingCartAdapter"
            android:label="@string/title_activity_shopping_cart_adapter" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Fragment.ProfileAdapter"
            android:label="@string/title_activity_profile_adapter" >
        </activity>
        <activity
            android:name=".Activity.ShowOrdersActivity"
            android:label="@string/title_activity_show_orders" >
        </activity>
        <activity
            android:name=".Activity.ShowOrderDetailActivity"
            android:label="@string/title_activity_show_order_detail" >
        </activity>
    </application>

</manifest>
