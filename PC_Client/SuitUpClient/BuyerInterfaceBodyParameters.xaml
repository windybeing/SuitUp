        <Button Name="BodyParameters" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignFloatingActionDarkButton1}" Width="162" Click="BodyParametersClick" Margin="521,18,97,557" Height="Auto" FontSize="20">
